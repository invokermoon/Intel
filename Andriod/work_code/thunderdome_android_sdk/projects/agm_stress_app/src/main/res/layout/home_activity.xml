<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/pbScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@android:style/Widget.ProgressBar.Large"/>
    <ListView
        android:id="@+id/lvDevices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/viScanSeparatorBottom"
        android:layout_above="@+id/viScanSeparatorBottom">
    </ListView>


    <View
        android:id="@+id/viScanSeparatorBottom"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/tvScanLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvScanLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bleiasService_status"
        android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/tvScanValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvScanLabel"
        />



</RelativeLayout>
